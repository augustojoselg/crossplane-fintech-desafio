# =============================================================================
# CONFIGURAÇÃO DA PLATAFORMA FINTECH - CROSSPLANE
# =============================================================================

# =============================================================================
# CONFIGURAÇÃO AWS
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
AWS_PROFILE=default

# =============================================================================
# CONFIGURAÇÃO DA PLATAFORMA
# =============================================================================
PLATFORM_NAME=fintech-platform
ENVIRONMENT=production
DOMAIN=fintech.local
CLUSTER_NAME=fintech-eks-cluster

# =============================================================================
# CONFIGURAÇÃO DE REDE
# =============================================================================
VPC_CIDR=10.0.0.0/16
PUBLIC_SUBNET_1_CIDR=10.0.1.0/24
PUBLIC_SUBNET_2_CIDR=10.0.2.0/24
PRIVATE_SUBNET_1_CIDR=10.0.10.0/24
PRIVATE_SUBNET_2_CIDR=10.0.11.0/24
DATABASE_SUBNET_1_CIDR=10.0.20.0/24
DATABASE_SUBNET_2_CIDR=10.0.21.0/24

# =============================================================================
# CONFIGURAÇÃO EKS
# =============================================================================
EKS_VERSION=1.28
NODE_GROUP_INSTANCE_TYPE=t3.medium
NODE_GROUP_MIN_SIZE=2
NODE_GROUP_MAX_SIZE=10
NODE_GROUP_DESIRED_SIZE=3

# =============================================================================
# CONFIGURAÇÃO RDS POSTGRESQL
# =============================================================================
DB_ENGINE=postgres
DB_ENGINE_VERSION=15.4
DB_INSTANCE_CLASS=db.r6g.large
DB_STORAGE_GB=100
DB_MULTI_AZ=true
DB_BACKUP_RETENTION_DAYS=7
DB_DELETION_PROTECTION=true

# =============================================================================
# CONFIGURAÇÃO ELASTICACHE REDIS
# =============================================================================
REDIS_ENGINE_VERSION=7.0
REDIS_NODE_TYPE=cache.r6g.large
REDIS_NUM_CACHE_NODES=2
REDIS_MULTI_AZ=true

# =============================================================================
# CONFIGURAÇÃO DE MONITORING
# =============================================================================
PROMETHEUS_RETENTION_DAYS=15
GRAFANA_ADMIN_PASSWORD=admin123
ELASTICSEARCH_STORAGE_GB=100

# =============================================================================
# CONFIGURAÇÃO DE SEGURANÇA
# =============================================================================
ENABLE_POD_SECURITY_STANDARDS=true
ENABLE_NETWORK_POLICIES=true
ENABLE_RBAC=true
ENABLE_SSL_TLS=true

# =============================================================================
# CONFIGURAÇÃO DE ESCALABILIDADE
# =============================================================================
HPA_CPU_TARGET=70
HPA_MEMORY_TARGET=80
HPA_MIN_REPLICAS=2
HPA_MAX_REPLICAS=20

# =============================================================================
# CONFIGURAÇÃO DE LOGS
# =============================================================================
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30
ENABLE_STRUCTURED_LOGGING=true

# =============================================================================
# CONFIGURAÇÃO DE TESTES
# =============================================================================
ENABLE_CHAOS_TESTING=false
ENABLE_LOAD_TESTING=false
ENABLE_VULNERABILITY_SCANNING=true
